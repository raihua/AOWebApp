@model IEnumerable<AOWebApp.Models.Item>

@{
    ViewData["Title"] = "Index";
}

<h1 class="rounded bg-secondary-subtle text-center pb-2">Shop Items</h1>

<p>
    <a class="btn btn-outline-info" asp-action="Create">Create New</a>
</p>

<div class="row gy-3 gx-3">
    @foreach (var item in Model)
    {
        <div class="col-4">
            <div class="card">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.ItemName)</h5>
                    <p class="card-text mb-0">Category: @Html.DisplayFor(modelItem => item.Category.CategoryName)</p>
                    <p class="card-text mb-0">Description: @Html.DisplayFor(modelItem => item.ItemDescription)</p>
                    <p class="card-text mb-0">Cost: @Html.DisplayFor(modelItem => item.ItemCost)</p>
                    <img src="@item.ItemImage" class="card-img-top w-50 mt-2" alt="@item.ItemName">
                    <a asp-action="Details" asp-route-id="@item.ItemId" class="btn btn-outline-primary w-50 mt-2">View Item Detail</a>
                </div>
            </div>
        </div>
    }
</div>

